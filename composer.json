{
	"type": "project",
	"require": {
		"php": ">=8.1.0",
		"getkirby/cms": "4.0.0-rc.1"
	},
	"config": {
		"optimize-autoloader": true,
		"allow-plugins": {
			"getkirby/composer-installer": true
		}
	},
	"extra": {
		"kirby-cms-path": false
	},
	"scripts": {
		"dev": [
			"Composer\\Config::disableProcessTimeout",
			"@php -S localhost:8000 -t public vendor/getkirby/cms/router.php"
		]
	}
}
